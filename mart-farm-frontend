[32m+[m[32m      this.isDesktop.set(false);[m
     }[m
[32m+[m[32m    // Tablet: 769px - 1023px[m
[32m+[m[32m    else if (width <= 1023) {[m
[32m+[m[32m      this.isMobile.set(false);[m
[32m+[m[32m      this.isTablet.set(true);[m
[32m+[m[32m      this.isDesktop.set(false);[m
[32m+[m[32m    }[m
[32m+[m[32m    // Desktop: â‰¥1024px[m
[32m+[m[32m    else {[m
[32m+[m[32m      this.isMobile.set(false);[m
[32m+[m[32m      this.isTablet.set(false);[m
